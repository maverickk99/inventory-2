<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        tools:context="com.example.android.sqlsecondsectionapplication.AddActivity">


        <TextView
            android:id="@+id/add_product_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Product name :"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/add_product_name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_text_view"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-light"
            android:hint="please enter a product name." />

        <TextView
            android:id="@+id/add_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_product_name_edit_text"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Price :"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/add_price_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_price_text_view"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:hint="please enter a price"
            android:inputType="number" />

        <TextView
            android:id="@+id/add_quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_price_edit_text"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Quantity :"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/add_quantity_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_quantity_text_view"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:hint="please enter quantity."
            android:inputType="number" />

        <TextView
            android:id="@+id/add_supplier_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_quantity_edit_text"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Supplier Name :"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/add_supplier_name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_supplier_name_text_view"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:hint="please enter a name." />

        <TextView
            android:id="@+id/add_supplier_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_supplier_name_edit_text"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Supplier E-mail :"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/add_supplier_email_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_supplier_email_text_view"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:hint="please enter a supplier email." />

        <TextView
            android:id="@+id/add_supplier_phone_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_supplier_email_edit_text"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="Supplier Phone Number :"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/add_supplier_phone_number_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_supplier_phone_number_text_view"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:hint="please enter a phone number."
            android:inputType="number" />

    </RelativeLayout>
</ScrollView>
